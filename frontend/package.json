{
  "name": "lifeguard-frontend",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Dennis Schmidt",
  "license": "ISC",
  "scripts": {
    "dev": "npm run webpack:dev:server",
    "webpack:dev:server": "better-npm-run start-webpack-dev-server",
    "prod": "npm run prod:build:client",
    "prod:build:client": "better-npm-run prod-build-client && npm run prod:publish",
    "prod:publish": "rimraf ../public/assets && mkdir ../public/assets && cp -a build/. ../public/assets/"
  },
  "betterScripts": {
    "start-webpack-dev-server": {
      "command": "babel-node webpack.dev.server.js",
      "env": {
        "NODE_ENV": "development",
        "HOST": "localhost",
        "PORT": 8080
      }
    },
    "prod-build-client": {
      "command": "rimraf build && webpack --config webpack.prod.config.js --json > stats.json",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "apollo-client": "^0.4.20",
    "bootstrap": "^3.3.5",
    "graphiql": "^0.7.8",
    "graphql": "^0.7.1",
    "graphql-tag": "^0.1.14",
    "jquery": "^2.1.4",
    "lodash": "^4.16.3",
    "moment": "^2.15.1",
    "react": "^15.4.2",
    "react-apollo": "^0.5.7",
    "react-dom": "^15.4.2",
    "react-router": "^4.0.0-alpha.4",
    "turbolinks": "^5.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.1",
    "babel-cli": "^6.14.0",
    "babel-loader": "6.2.5",
    "babel-plugin-lodash": "3.2.8",
    "babel-plugin-transform-runtime": "6.12.0",
    "babel-preset-es2015": "6.14.0",
    "babel-preset-react": "6.11.1",
    "babel-preset-stage-2": "6.13.0",
    "better-npm-run": "0.0.11",
    "css-loader": "^0.24.0",
    "extract-text-webpack-plugin": "2.0.0-beta.3",
    "file-loader": "^0.9.0",
    "isomorphic-fetch": "^2.2.1",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "node-sass": "^3.8.0",
    "postcss-loader": "^0.11.1",
    "react-hot-loader": "3.0.0-beta.5",
    "resolve-url-loader": "^1.6.0",
    "rimraf": "^2.5.4",
    "sass-loader": "4.0.2",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "2.1.0-beta.25",
    "webpack-dev-server": "2.1.0-beta.5",
    "webpack-manifest-plugin": "^1.0.1"
  }
}
